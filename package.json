{
  "name": "mcp-suite",
  "version": "3.0.0",
  "description": "Enterprise-Grade MCP Multi-Server Suite - Security Hardened, SOC 2 Compliant",
  "private": true,
  "workspaces": [
    "servers/*",
    "shared/*"
  ],
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('Please use Yarn')\"",
    
    "install:all": "yarn install && yarn workspace:install",
    "workspace:install": "yarn workspaces foreach install",
    
    "build": "yarn build:shared && yarn build:servers",
    "build:shared": "yarn workspaces foreach --include '{shared/*}' run build",
    "build:servers": "yarn workspaces foreach --include '{servers/*}' run build",
    "build:production": "NODE_ENV=production yarn build",
    
    "clean": "yarn workspaces foreach run clean && rm -rf node_modules dist",
    "clean:build": "yarn workspaces foreach run clean",
    
    "test": "yarn test:unit && yarn test:integration && yarn test:security",
    "test:unit": "jest --config jest.config.js --testPathPattern=tests/unit",
    "test:integration": "jest --config jest.config.js --testPathPattern=tests/integration",
    "test:security": "jest --config jest.config.js --testPathPattern=tests/security",
    "test:performance": "jest --config jest.config.js --testPathPattern=tests/performance",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "format": "prettier --write '**/*.{ts,tsx,json,md}'",
    
    "security:scan": "npm audit && yarn audit && snyk test",
    "security:fix": "npm audit fix && yarn audit fix",
    "security:apply-fixes": "ts-node scripts/apply-security-fixes.ts",
    "security:vulnerability-scan": "snyk test --all-projects",
    "security:dependency-check": "yarn outdated",
    
    "start:all": "concurrently --names 'SERVERS' -c 'bgBlue.bold' 'yarn start:servers'",
    "start:servers": "yarn workspaces foreach --parallel --include '{servers/*}' run start",
    "start:dev": "yarn workspaces foreach --parallel --include '{servers/*}' run dev",
    
    "deploy:staging": "NODE_ENV=staging yarn build:production && yarn deploy:run staging",
    "deploy:production": "NODE_ENV=production yarn build:production && yarn deploy:run production",
    "deploy:run": "ts-node scripts/deploy.ts",
    
    "docs": "typedoc --out docs/api",
    "docs:serve": "http-server docs -p 8080",
    
    "health:check": "ts-node scripts/health-check.ts",
    "health:monitor": "watch -n 60 'yarn health:check'",
    
    "backup": "ts-node scripts/backup.ts",
    "restore": "ts-node scripts/restore.ts",
    
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "yarn test && yarn lint"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "date-fns": "^3.0.0",
    "axios": "^1.6.2",
    "pg": "^8.11.3",
    "tedious": "^16.6.1",
    "mssql": "^10.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "typedoc": "^0.25.4",
    "http-server": "^14.1.1",
    "snyk": "^1.1275.0",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "security",
    "soc2",
    "hipaa",
    "gdpr",
    "enterprise",
    "microsoft-fabric",
    "azure",
    "ai",
    "llm"
  ],
  "author": "MCP-Suite Team",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mcp-suite.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/mcp-suite/issues"
  },
  "homepage": "https://github.com/your-org/mcp-suite#readme"
}
