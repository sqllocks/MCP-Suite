{
  "name": "security-guardian-mcp",
  "version": "1.0.0",
  "description": "Continuous security monitoring, vulnerability detection, and auto-remediation MCP server",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "scan": "node dist/server.js --tool scan_for_vulnerabilities --target .",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "audit": "npm audit --audit-level=moderate"
  },
  "keywords": [
    "security",
    "vulnerability-scanning",
    "sast",
    "dependency-scanning",
    "auto-remediation",
    "devops",
    "devsecops",
    "mcp",
    "compliance",
    "hipaa",
    "soc2"
  ],
  "author": "Your Organization",
  "license": "PROPRIETARY",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.5",
    "joi": "^17.11.0",
    "sanitize-html": "^2.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/sanitize-html": "^2.9.5",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
