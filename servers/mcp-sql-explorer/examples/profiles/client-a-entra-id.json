{
  "client_id": "client-a",
  "profile_name": "ClientA - Acme Corp",
  "connections": {
    "prod-fabric-warehouse": {
      "name": "Production Fabric Warehouse",
      "type": "fabric-warehouse",
      "host": "acme-fabric.datawarehouse.fabric.microsoft.com",
      "database": "Analytics",
      "authentication": {
        "type": "entra-id",
        "tenantId": "${AZURE_TENANT_ID_CLIENTA}",
        "clientId": "${AZURE_CLIENT_ID_CLIENTA}",
        "clientSecret": "${AZURE_CLIENT_SECRET_CLIENTA}"
      },
      "read_only": true,
      "timeout": 30,
      "options": {
        "encrypt": true,
        "trustServerCertificate": false
      }
    },
    "dev-fabric-warehouse": {
      "name": "Development Fabric Warehouse",
      "type": "fabric-warehouse",
      "host": "acme-fabric-dev.datawarehouse.fabric.microsoft.com",
      "database": "Analytics_Dev",
      "authentication": {
        "type": "entra-id",
        "tenantId": "${AZURE_TENANT_ID_CLIENTA}",
        "clientId": "${AZURE_CLIENT_ID_CLIENTA}",
        "clientSecret": "${AZURE_CLIENT_SECRET_CLIENTA}"
      },
      "read_only": false,
      "timeout": 30
    },
    "legacy-sql-server": {
      "name": "Legacy SQL Server (SQL Auth)",
      "type": "mssql",
      "host": "acme-legacy.database.windows.net",
      "port": 1433,
      "database": "Legacy",
      "authentication": {
        "type": "sql-auth",
        "username": "${SQL_USERNAME_CLIENTA}",
        "password": "${SQL_PASSWORD_CLIENTA}"
      },
      "read_only": true,
      "timeout": 30
    },
    "synapse-serverless": {
      "name": "Synapse Serverless (Entra ID)",
      "type": "synapse-serverless",
      "host": "acme-synapse.sql.azuresynapse.net",
      "database": "DataLake",
      "authentication": {
        "type": "entra-id",
        "tenantId": "${AZURE_TENANT_ID_CLIENTA}",
        "clientId": "${AZURE_CLIENT_ID_CLIENTA}",
        "clientSecret": "${AZURE_CLIENT_SECRET_CLIENTA}"
      },
      "read_only": true
    }
  },
  "max_result_rows": 1000,
  "query_timeout": 30,
  "allow_write_operations": false,
  "dangerous_keywords": [
    "DROP", "TRUNCATE", "DELETE", "UPDATE", "INSERT", "ALTER", "CREATE"
  ]
}
