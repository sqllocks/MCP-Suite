{
  "client_id": "client-example",
  "connections": {
    "on-prem-sql": {
      "name": "on-prem-sql",
      "type": "mssql",
      "host": "10.0.1.50",
      "database": "Analytics",
      "authenticationType": "sql-auth",
      "username": "analyticsUser",
      "password": "Password123!",
      "read_only": true,
      "options": {
        "comment": "On-premises SQL Server with SQL authentication"
      }
    },
    "azure-sql-entra": {
      "name": "azure-sql-entra",
      "type": "mssql",
      "host": "myserver.database.windows.net",
      "database": "CloudDatabase",
      "authenticationType": "entra-id",
      "tenantId": "12345678-1234-1234-1234-123456789012",
      "clientId": "87654321-4321-4321-4321-210987654321",
      "clientSecret": "your-client-secret",
      "read_only": true,
      "options": {
        "comment": "Azure SQL with Entra ID (Azure AD) authentication"
      }
    },
    "fabric-managed-id": {
      "name": "fabric-managed-id",
      "type": "fabric-warehouse",
      "host": "xyz123.datawarehouse.fabric.microsoft.com",
      "database": "MainWarehouse",
      "authenticationType": "managed-identity",
      "read_only": true,
      "options": {
        "comment": "Fabric Warehouse with Managed Identity (when running in Azure)"
      }
    }
  },
  "max_result_rows": 1000,
  "allow_write_operations": false
}
